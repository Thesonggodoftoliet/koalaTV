.buttom {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  z-index: 1001;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.3;
  overflow: hidden;
}

.drawer_box {
  overflow: hidden;
  position: fixed;
  z-index: 1001;
}
