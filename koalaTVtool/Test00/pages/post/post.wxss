page {
  height: 100%;
  width: 100%;
}

.big-logos {
  margin: 0 auto;
  width: 100%;
  height: 24%;
  border: none;
  background-color: white;
}

.big-logos .big-logos_img {
  width: 100%;
  height: 200rpx;
  position: absolute;
  bottom: 10%;
  text-align: center;
}

.big-logos .big-logos_img image {

  width: 250rpx;
  height: 200rpx;
}

.big-logos .logoinfo {

  width: 100%;
  height: 200rpx;
  position: absolute;
  bottom: 10%;
  text-align: center;
}

.big-logos .logoinfo image {
  width: 250rpx;
  height: 200rpx;
}

.button_view {
  width: 100%;
  position: absolute;
  bottom: 1%;
}

button {
  background-color: rgb(26, 24, 21);
  color: white;
  border-radius: 98rpx;
}

.post {
  width: 100%;
  height: 61.8%;
  background-color: rgb(243, 242, 242);
}

.post .title {
  margin-top: 0;
  margin-left: 0%;
  padding-left: 8%;
  height: 10%;
  width: 100%;
  font-weight: bold;
  color:rgb(0, 0, 0);
  background-color: white;
}

.post .content {
  margin-top: 1rpx;
  padding: 5% 5% 5% 5%;
  width: 90%;
  height: 90%;
  overflow: auto;
  background-color: white;
}
